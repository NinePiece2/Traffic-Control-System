                document.getElementById('timeRed1_2').style.display = 'block';  // Show red timer for Direction 1
                activateLight();  // Activate lights based on the active timers
                if (red1 <= 0 && red1_2 <= 0) {
                    currentPhase1 = 'green';
                    currentPhase1_2 = 'green_2';
                    red1 = green2 + yellow2;
                    red1_2 = green2_2 + yellow2_2;  // Reset red to match the new green and yellow sum
                    currentDirection = 2; // Switch to Direction 2
                }
            }

            // Update Direction 2 (only if it's active)
            if (currentPhase2 === 'green' && currentPhase1_2 === 'green_2' && currentDirection === 2) {
                green2--;
                green2_2--;
                red1--;
                red1_2--;
                document.getElementById(`timeGreen2`).innerText = formatTime(green2);
                document.getElementById('timeGreen2').style.display = 'block';  // Show green timer for Direction 2
                document.getElementById(`timeRed1`).innerText = formatTime(red1);
                document.getElementById('timeRed1').style.display = 'block';  // Show red timer for Direction 1

                document.getElementById(`timeGreen2_2`).innerText = formatTime(green2_2);
                document.getElementById('timeGreen2_2').style.display = 'block';  // Show green timer for Direction 2
                document.getElementById(`timeRed1_2`).innerText = formatTime(red1_2);
                document.getElementById('timeRed1_2').style.display = 'block';  // Show red timer for Direction 1
                activateLight();  // Activate lights based on the active timers
                if (green2 <= 0 && green2_2 <= 0) {
                    currentPhase2 = 'yellow';
                    currentPhase2_2 = 'yellow_2';
                    green2 = 90;
                    green2_2 = 90; // Reset green to 90 seconds when transitioning
                    red2 = green2 + yellow2; // Update red to match the new green and yellow sum
                    red2_2 = green2_2 + yellow2_2;
                }
            } else if (currentPhase2 === 'yellow' && currentPhase2 === 'yellow_2' && currentDirection === 2) {
                yellow2--;
                yellow2_2--;
                red1--;
                red1_2--;
                document.getElementById(`timeYellow2`).innerText = formatTime(yellow2);
                document.getElementById('timeYellow2').style.display = 'block';  // Show yellow timer for Direction 2
                document.getElementById(`timeRed1`).innerText = formatTime(red1);
                document.getElementById('timeRed1').style.display = 'block';  // Show red timer for Direction 1

                document.getElementById(`timeYellow2_2`).innerText = formatTime(yellow2_2);
                document.getElementById('timeYellow2_2').style.display = 'block';  // Show yellow timer for Direction 2
                document.getElementById(`timeRed1_2`).innerText = formatTime(red1_2);
                document.getElementById('timeRed1_2').style.display = 'block';  // Show red timer for Direction 1
                activateLight();  // Activate lights based on the active timers
                if (yellow2 <= 0 && yellow2_2 <= 0) {
                    currentPhase2 = 'red';
                    currentPhase2_2 = 'red_2';
                    yellow2 = 10; // Reset yellow to 10 seconds when transitioning
                    yellow2_2 = 10;
                    red2 = green2 + yellow2; // Update red to match the new green and yellow sum
                    red2_2 = green2_2 + yellow2_2;
                }
            } else if (currentPhase2 === 'red' && currentPhase2_2 === 'red_2' && currentDirection === 2) {
                red2--;
                red2_2--;
                document.getElementById(`timeRed2`).innerText = formatTime(red2);
                document.getElementById('timeRed2').style.display = 'block';  // Show red timer for Direction 2
                
                document.getElementById(`timeRed2_2`).innerText = formatTime(red2_2);
                document.getElementById('timeRed2_2').style.display = 'block';  // Show red timer for Direction 2
                activateLight();  // Activate lights based on the active timers
                if (red2 <= 0 && red2_2 <= 0) {
                    currentPhase2 = 'green';
                    currentPhase2_2 = 'green_2';
                    red2 = green1 + yellow1;  // Reset red to match Direction 1's green and yellow sum
                    red2_2 = green1_2 + yellow1_2;
                    currentDirection = 1; // Switch to Direction 1
                }
            }
        }

        function activateLight() {
        // Hide all traffic lights
        document.querySelectorAll('.traffic-light1 div, .traffic-light1-2 div, .traffic-light2 div, .traffic-light2-2 div').forEach(light => {
            light.style.opacity = '0.2'; // Set all lights to barely visible
        });

        // Activate lights for Direction 1 (light 1 & light 2)
            if (currentPhase1 === 'green' && currentPhase1_2 === 'green_2') {
                activateColorLight(1, 'green');
                activateColorLight(1_2, 'green_2'); // Light 2 for Direction 1
                activateColorLight(2, 'red');
                activateColorLight(2_2, 'red_2'); // Light 2 for Direction 2
            } else if (currentPhase1 === 'yellow' && currentPhase1_2 === 'yellow_2') {
