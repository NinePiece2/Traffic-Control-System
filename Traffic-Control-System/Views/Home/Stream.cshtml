                activateColorLight(2, 'green');
                activateColorLight(2_2, 'green_2');
            }

            // Activate lights for Direction 2 (light 1 & light 2)
            if (currentPhase2 === 'green' && currentPhase2_2 === 'green_2' && currentDirection === 2) {
                activateColorLight(2, 'green');
                activateColorLight(2_2, 'green_2');
                activateColorLight(1, 'red');
                activateColorLight(1_2, 'red_2');
            } else if (currentPhase2 === 'yellow' && currentPhase2_2 === 'yellow_2' && currentDirection === 2) {
                activateColorLight(2, 'yellow');
                activateColorLight(2_2, 'yellow_2');
                activateColorLight(1, 'red');
                activateColorLight(1_2, 'red_2');
            } else if (currentPhase2 === 'red' && currentPhase2_2 === 'red_2' && currentDirection === 2) {
                activateColorLight(2, 'red');
                activateColorLight(2_2, 'red_2');
                activateColorLight(1, 'green');
