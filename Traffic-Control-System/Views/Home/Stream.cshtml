        align-items: center;
        justify-content: center;
        width: 40%;
        height: 100%;
    }

    .video-container {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        height: 100%;
        overflow: hidden;
        margin-right: 10px;
        aspect-ratio: 16 / 9;
        position: relative;
    }

    .video-container video, .video-container img, .video-container .vjs-tech, .video-container .video-js{
        width: 100%;
        object-fit: contain;
        position: absolute;
    }

    .info-container {
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        align-items: flex-start;
        margin-left: 10px;
        width: 50%;
        height: 100%;
        max-height: 100%;
