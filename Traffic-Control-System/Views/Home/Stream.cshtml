            document.getElementById("error-image").style.display = "block";

            // Retry the video every 5 seconds
            let retryInterval = setInterval(() => {
                //console.log("Retrying video...");
                player.src(player.currentSrc()); // Reload the same video source
                player.load();
                player.play().then(() => {
                    console.log("Video is now playing!");

                    // Show the video and hide the image
                    document.getElementById("my-video").style.display = "block";
                    document.getElementById("error-image").style.display = "none";

                    // Stop retrying since the video is working
                    clearInterval(retryInterval);
                }).catch((err) => {
                    //console.warn("Retry failed, still an error:", err);
                });
            }, 3000);
        });

        @* // Initial Timers
        var green1 = 90;  // 1 minute 30 seconds for green in Direction 1 light 1
        var yellow1 = 10; // 10 seconds for yellow in Direction 1 light 1
        var green2 = 90;  // 1 minute 30 seconds for green in Direction 2 light 1
        var yellow2 = 10; // 10 seconds for yellow in Direction 2 light 1

        var green1_2 = 90;  // 1 minute 30 seconds for green in Direction 1 light 2
        var yellow1_2 = 10; // 10 seconds for yellow in Direction 1 light 2
        var green2_2 = 90;  // 1 minute 30 seconds for green in Direction 2 light 2
        var yellow2_2 = 10; // 10 seconds for yellow in Direction 2 light 2

        // Initial red durations for both directions
        var red1 = green2 + yellow2; // Red duration for Direction 1 is equal to Direction 2's green + yellow time
        var red2 = green1 + yellow1; // Red duration for Direction 2 is equal to Direction 1's green + yellow time
        var red1_2 = green2_2 + yellow2_2; // Red duration for Direction 1 is equal to Direction 2's green + yellow time
        var red2_2 = green1_2 + yellow1_2; // Red duration for Direction 2 is equal to Direction 1's green + yellow time

        var currentDirection = 1;
        var currentPhase1 = 'green'; // Phase for Direction 1
        var currentPhase2 = 'red'; // Phase for Direction 2
        var currentPhase1_2 = 'green_2'; // Phase for Direction 1 light 2
        var currentPhase2_2 = 'red_2'; // Phase for Direction 2 light 2

        function updateTimers() {
            // Hide all timers initially
            document.querySelectorAll('#timeGreen1, #timeYellow1, #timeRed1, #timeGreen2, #timeYellow2, #timeRed2').forEach(timer => {
                timer.style.display = 'none';
            });

            document.querySelectorAll('#timeGreen1_2, #timeYellow1_2, #timeRed1_2, #timeGreen2_2, #timeYellow2_2, #timeRed2_2').forEach(timer => {
                timer.style.display = 'none';
            });

            // Update Direction 1
            if (currentPhase1 === 'green' && currentPhase1_2 === 'green_2') {
                green1--;
                green1_2--;
                red2--;
                red2_2--;
                document.getElementById(`timeGreen1`).innerText = formatTime(green1);
                document.getElementById('timeGreen1').style.display = 'block';  // Show green timer for Direction 1
                document.getElementById(`timeRed2`).innerText = formatTime(red2);
                document.getElementById('timeRed2').style.display = 'block';  // Show red timer for Direction 2
                
                document.getElementById(`timeGreen1_2`).innerText = formatTime(green1_2);
                document.getElementById('timeGreen1_2').style.display = 'block';  // Show green timer for Direction 1
                document.getElementById(`timeRed2_2`).innerText = formatTime(red2_2);
                document.getElementById('timeRed2_2').style.display = 'block';  // Show red timer for Direction 2
                activateLight();  // Activate lights based on the active timers
                if (green1 <= 0 && green1_2 ) {
                    currentPhase1 = 'yellow';
                    currentPhase1_2 = 'yellow_2';
                    green1 = 90;  // Reset green to 90 seconds when transitioning
                    green1_2 = 90;  // Reset green to 90 seconds when transitioning
                    red1 = green2 + yellow2; // Update red to match the new green and yellow sum
                    red1_2 = green2_2 + yellow2_2; // Update red to match the new green and yellow sum
                }
            } else if (currentPhase1 === 'yellow' && currentPhase1_2 === 'yellow_2') {
                yellow1--;
                yellow1_2--;
                red2--;
                red2_2--;
                document.getElementById(`timeYellow1`).innerText = formatTime(yellow1);
                document.getElementById('timeYellow1').style.display = 'block';  // Show yellow timer for Direction 1
                document.getElementById(`timeRed2`).innerText = formatTime(red2);
                document.getElementById('timeRed2').style.display = 'block';  // Show red timer for Direction 2

                document.getElementById(`timeYellow1_2`).innerText = formatTime(yellow1_2);
                document.getElementById('timeYellow1_2').style.display = 'block';  // Show yellow timer for Direction 1
                document.getElementById(`timeRed2_2`).innerText = formatTime(red2_2);
                document.getElementById('timeRed2_2').style.display = 'block';  // Show red timer for Direction 2
                activateLight();  // Activate lights based on the active timers
                if (yellow1 <= 0 && yellow1_2 <= 0) {
                    currentPhase1 = 'red';
                    currentPhase1_2 = 'red_2';
                    yellow1 = 10; // Reset yellow to 10 seconds when transitioning
                    yellow1_2 = 10;
                    red1 = green2 + yellow2; // Update red to match the new green and yellow sum
                    red1_2 = green2_2 + yellow2_2;
                }
            } else if (currentPhase1 === 'red' && currentPhase1_2 === 'red_2') {
